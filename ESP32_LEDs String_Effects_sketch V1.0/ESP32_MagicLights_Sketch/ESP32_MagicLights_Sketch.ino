int string_compare(char *a, char *b)
{
  bool equal = true;
  while(*a != 0 && *b != 0 && equal)
  {
    if(*a != *b)
    {
      equal = false;
    }
    else
    {
      a++;
      b++;
    }
  }  

  if(equal)
  {
    return 0;
  }
  else
  {
    return -1;
  }
}

int string_compare(char *a, char *b, uint32_t len)
{
  bool equal = true;
  while(*a != 0 && *b != 0 && equal && len > 0)
  {
    len--;
    if(*a != *b)
    {
      equal = false;
    }
    else
    {
      a++;
      b++;
    }
  }  

  if(equal)
  {
    return 0;
  }
  else
  {
    return -1;
  }
}


